﻿@model IEnumerable<CuaHangThoiTrang.Models.DATHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Danh sách đơn hàng</h2>


<table class="table">
    <tr>
        <th>
            Họ tên khách hàng
        </th>
        <th>
            Ngày đặt
        </th>
        <th>
            Tình trạng đơn hàng
        </th>
        <th>
            Thanh toán
        </th>
        <th>
            Địa chỉ nhận hàng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NGUOIDUNG.hoten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ngayDat)
            </td>
            <td>
                @{ if (@item.trangThai == 0)
                    {
                        <h5 style="color:red">Đang chờ xác nhận. </h5> }
                    else if (@item.trangThai == 1)
                    {
                        <h5 style="color:green">Đã xác nhận  </h5> }
                    else
                    {
                        <h5 style="color:orangered">Đang chờ xác nhận </h5> } }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PHUONGTHUCTHANHTOAN.tenPT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.diaChi)
            </td>
            <td>
                @*<button class="btn btn-success">
                        @Html.ActionLink("Xác nhận", "Edit", new { id = item.Madon }, new { @style = "color:white;" })
                    </button>*@
                <button class="btn btn-primary">
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.maDH }, new { @style = "color:white;" })
                </button>
                @*<button class="btn btn-danger">
                        @Html.ActionLink("Xóa", "Delete", new { id = item.Madon }, new { @style = "color:white;" })
                    </button>*@
            </td>
        </tr>
    }

</table>