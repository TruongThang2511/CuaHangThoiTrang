@model PagedList.IPagedList<CuaHangThoiTrang.Models.DANHGIA>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Đánh giá</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã sản phẩm
        </th>
        <th>
            Nội dung đánh giá
        </th>
        <th>
            Số sao:
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.maSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.noidungDG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sosao)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.maDG }) |
                @Html.ActionLink("Details", "Details", new { id = item.maDG }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.maDG })
            </td>
        </tr>
    }

</table>
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))